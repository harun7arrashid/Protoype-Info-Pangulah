<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.dkm.qurban.DetailQurbanFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_detail_qurban"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:layout_collapseMode="pin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Detail Qurban" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_detail_qurban">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_detail_qurban"
                style="@style/ImgDetailMoney"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_detail_total_qurban"
                style="@style/TvDetailTotal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_detail_qurban" />

            <TextView
                android:id="@+id/tv_detail_diInput_qurban2"
                style="@style/TvDetailDiInput"
                android:text="Nama PengQurban : "
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_total_qurban" />

            <TextView
                android:id="@+id/tv_detail_name_pengQurban"
                style="@style/TvDetailNameMoney"
                android:text="Teguh Handayani"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/tv_detail_diInput_qurban2"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_total_qurban" />

            <TextView
                android:id="@+id/tv_detail_diInput_qurban"
                style="@style/TvDetailDiInput"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_jenis_qurban" />

            <TextView
                android:id="@+id/tv_detail_name_qurban"
                style="@style/TvDetailNameMoney"
                android:layout_marginTop="8dp"
                android:layout_marginStart="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@id/tv_detail_name_pengQurban"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_jenis_qurban" />

            <TextView
                android:id="@+id/tv_detail_diInput_qurban4"
                style="@style/TvDetailDiInput"
                android:text="Jenis Qurban :"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_name_pengQurban" />

            <TextView
                android:id="@+id/tv_detail_jenis_qurban"
                style="@style/TvDetailNameMoney"
                android:layout_marginTop="8dp"
                android:text="Kambing"
                app:layout_constraintStart_toStartOf="@id/tv_detail_name_pengQurban"
                android:layout_marginStart="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_name_pengQurban" />

            <TextView
                android:id="@+id/tv_detail_diInput_qurban3"
                style="@style/TvDetailDiInput"
                android:text="Pada Tanggal : "
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_name_qurban" />

            <TextView
                android:id="@+id/tv_detail_date_qurban"
                style="@style/TvDetailNameMoney.Date"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@id/tv_detail_name_pengQurban"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_name_qurban" />

            <Button
                android:id="@+id/btn_detail_back_qurban"
                style="@style/BtnDetailCitizen"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_name_qurban" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>